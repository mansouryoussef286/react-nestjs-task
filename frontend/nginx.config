server {
    listen 80;
    server_name localhost;

    root /usr/share/nginx/html;
    index index.html;

    location / {
        try_files $uri /index.html;
    }

    # Optional: serve static assets normally
    location /static/ {
        try_files $uri =404;
    }

    # Optional: proxy API calls to backend
    location /api/ {
        proxy_pass http://backend:3000;
    }
}
